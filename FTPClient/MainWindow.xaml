<Window x:Class="FTPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Client" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TreeView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

     
        <Border Grid.Row="0" Background="White" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сервер:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                <TextBox x:Name="txtIP" Text="127.0.0.1" Width="100"/>

                <TextBlock Text="Порт:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPort" Text="8080" Width="60"/>

                <TextBlock Text="Логин:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <TextBox x:Name="txtLogin" Text="skomor1n" Width="100"/>

                <TextBlock Text="Пароль:" VerticalAlignment="Center" Margin="15,0,5,0" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Password="Asdfgl23" Width="100"/>

                <Button x:Name="btnConnect" Content="Подключиться" Click="BtnConnect_Click" Margin="15,0,5,0" Width="100"/>
                <Button x:Name="btnDisconnect" Content="Отключиться" Click="BtnDisconnect_Click" Width="80" IsEnabled="False"
                       Background="#6c757d"/>
            </StackPanel>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="1" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель навигации -->
            <Border Grid.Column="0" Background="White" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Папки" FontWeight="Bold" Padding="10,8" Background="#f8f9fa"/>

                    <TreeView x:Name="treeDirectories" 
                             Grid.Row="1"
                             MouseDoubleClick="TreeDirectories_MouseDoubleClick"
                             SelectedItemChanged="TreeDirectories_SelectedItemChanged"
                             Padding="5"/>
                </Grid>
            </Border>

            <!-- Список файлов -->
            <Border Grid.Column="1" Background="White" BorderBrush="#ddd" BorderThickness="1" CornerRadius="4" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Текущий путь -->
                    <Border Grid.Row="0" Background="#e9ecef" Padding="10">
                        <TextBlock x:Name="txtCurrentPath" FontWeight="SemiBold" Text="Текущий путь: /"/>
                    </Border>

                    <!-- Список файлов -->
                    <ListView x:Name="listFiles" Grid.Row="1" 
                             MouseDoubleClick="ListFiles_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Имя" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding Size}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Панель действий -->
                    <Border Grid.Row="2" Background="#f8f9fa" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnUpload" Content="📤 Загрузить" Click="BtnUpload_Click" 
                                   Background="#28a745" Width="100"/>
                            <Button x:Name="btnDownload" Content="📥 Скачать" Click="BtnDownload_Click" 
                                   Width="100"/>
                            <Button x:Name="btnRefresh" Content="🔄 Обновить" Click="BtnRefresh_Click" 
                                   Background="#17a2b8" Width="100"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <Border Grid.Row="2" Background="#343a40" CornerRadius="0,0,4,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Text="Не подключено" Foreground="White" 
                          VerticalAlignment="Center" Padding="10,5"/>

                <ProgressBar x:Name="progressBar" Grid.Column="1" Width="120" Height="16" 
                            IsIndeterminate="False" Margin="5" VerticalAlignment="Center"/>

                <TextBlock x:Name="txtUserInfo" Grid.Column="2" Text="Пользователь: Не авторизован" 
                          Foreground="White" VerticalAlignment="Center" Padding="10,5"/>
            </Grid>
        </Border>
    </Grid>
</Window>