<Window x:Class="FTPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Client" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель подключения -->
        <GroupBox Grid.Row="0" Header="Подключение" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="IP:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="txtIP" Grid.Column="1" Text="127.0.0.1" Margin="5"/>
                <TextBlock Grid.Column="2" Text="Порт:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="txtPort" Grid.Column="3" Text="8080" Margin="5"/>
                <TextBlock Grid.Column="4" Text="Логин:" VerticalAlignment="Center" Margin="5,0"/>
                <TextBox x:Name="txtLogin" Grid.Column="5" Text="skomor1n" Margin="5"/>
                <TextBlock Grid.Column="6" Text="Пароль:" VerticalAlignment="Center" Margin="5,0"/>
                <PasswordBox x:Name="txtPassword" Grid.Column="7" Password="Asdfgl23" Margin="5"/>
                <Button x:Name="btnConnect" Grid.Column="8" Content="Подключиться" Click="BtnConnect_Click" Margin="5" Width="100"/>
                <Button x:Name="btnDisconnect" Grid.Column="9" Content="Отключиться" Click="BtnDisconnect_Click" Margin="5" Width="80" IsEnabled="False"/>
            </Grid>
        </GroupBox>

        <!-- Основная область -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Дерево директорий -->
            <GroupBox Grid.Column="0" Header="Директории">
                <TreeView x:Name="treeDirectories" 
                         MouseDoubleClick="TreeDirectories_MouseDoubleClick"
                         SelectedItemChanged="TreeDirectories_SelectedItemChanged">
                </TreeView>
            </GroupBox>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>

            <!-- Список файлов -->
            <GroupBox Grid.Column="2" Header="Файлы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="txtCurrentPath" Grid.Row="0" Margin="5" FontWeight="Bold" Text="Текущий путь: /"/>

                    <ListView x:Name="listFiles" Grid.Row="1" 
                             MouseDoubleClick="ListFiles_MouseDoubleClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Имя" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Тип" Width="100" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Размер" Width="100" DisplayMemberBinding="{Binding Size}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Панель управления файлами -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                        <Button x:Name="btnUpload" Content="Загрузить файл" Click="BtnUpload_Click" Margin="0,0,5,0"/>
                        <Button x:Name="btnDownload" Content="Скачать" Click="BtnDownload_Click" Margin="0,0,5,0"/>
                        <Button x:Name="btnRefresh" Content="Обновить" Click="BtnRefresh_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="Не подключено"/>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar x:Name="progressBar" Width="100" Height="16" IsIndeterminate="False"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="txtUserInfo" Text="Пользователь: Не авторизован"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>